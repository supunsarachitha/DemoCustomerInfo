@{
    ViewData["Title"] = "Home Page";
}
@model DemoCustomerInfo.Models.CustomerModel

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link href="~/css/site.css" rel="stylesheet" />

<link href="https://fonts.googleapis.com/css2?family=Akaya+Telivigala&display=swap" rel="stylesheet">

<script src="http://code.jquery.com/jquery-latest.js"></script>


<div class="col-md-4">


    <div class="container">

            


        <form class="well form-horizontal" id="contact_form" asp-action="Index">
            @Html.AntiForgeryToken() @*help protect your application against cross-site request forgery.*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>

                <!-- Form Name -->
                <legend class="formHeader"><h1><b>Customer Information Form</b></h1></legend><br>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="FirstName">First Name</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input asp-for="FirstName" placeholder="First Name" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="LastName">Last Name</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input asp-for="LastName" placeholder="Last Name" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>



                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Occupation">Occupation</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                            <input asp-for="Occupation" placeholder="Occupation" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="Occupation" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="DateOfBirth">Date of birth</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            <input asp-for="DateOfBirth" placeholder="Date of birth" class="form-control" type="date">
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>


                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="HomeAddress">Home Address</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            <input asp-for="HomeAddress" placeholder="Home Address" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="HomeAddress" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Region">Region</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <div asp-for="Region">
                                @Html.DropDownListFor(x => x.RegionId, (IEnumerable<SelectListItem>)ViewBag.regionsList, new { id = "Id", @class = "form-control selectpicker" })
                            </div>
                        </div>
                        <span asp-validation-for="Region" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>


                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Email">E-Mail</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input asp-for="Email" placeholder="E-Mail Address" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="Email" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>


                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="PhoneNumber">Contact No.</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                            <input asp-for="PhoneNumber" placeholder="(+1)" class="form-control" type="text">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size:smaller"></span>
                    </div>
                </div>

                <!-- Select Basic -->
                <!-- Success message -->
                <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <br>
                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" asp-action="Create" id="btnSubmit" class="btn btn-warning" style="background: linear-gradient(45deg,#fc00ff,#00dbde); font-weight:500;">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                    </div>
                    
                </div>

            </fieldset>
        </form>

        </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}